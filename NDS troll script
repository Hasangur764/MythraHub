    Callback = function()
        loadstring(game:HttpGet("https://pastefy.app/YZoglOyJ/raw"))()
    end
})

-- Fart Sound
Window:CreateButton({
    Name = "Fart Sound",
    Callback = function()
        local sound = Instance.new("Sound")
        sound.SoundId = "rbxassetid://8430024127"
        sound.Parent = workspace
        sound.Volume = 5
        sound:Play()
        game:GetService("Debris"):AddItem(sound, 3)
    end
})

