local Rayfield = loadstring(game:HttpGet('https://sirius.menu/sirius'))()

local Window = Rayfield:CreateWindow({
    Name = "MythraHub",
    LoadingTitle = "MythraHub Loading...",
    LoadingSubtitle = "Premium Script Hub",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "MythraHubConfigs",
        FileName = "Settings"
    }
})

-- Fly Script
local flyEnabled = false
local Player = game.Players.LocalPlayer
local UIS = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

local hrp = nil
Player.CharacterAdded:Connect(function(char)
    hrp = char:WaitForChild("HumanoidRootPart")
end)
if Player.Character then
    hrp = Player.Character:FindFirstChild("HumanoidRootPart")
end

local function move(delta)
    if hrp then
        hrp.CFrame = hrp.CFrame * CFrame.new(0, 10 * delta, 0)
    end
end

local inputConnection

local FlyToggle = Window:CreateToggle({
    Name = "Fly (Press P to go Up)",
    CurrentValue = false,
    Flag = "FlyToggle",
    Callback = function(value)
        flyEnabled = value
        if flyEnabled then
            inputConnection = UIS.InputBegan:Connect(function(input, processed)
                if processed then return end
                if input.UserInputType == Enum.UserInputType.Keyboard then
                    if input.KeyCode == Enum.KeyCode.P then
                        move(1)
                    end
                end
            end)
        else
            if inputConnection then
                inputConnection:Disconnect()
                inputConnection = nil
            end
        end
    end
})

-- BTools
Window:CreateButton({
    Name = "BTools",
    Callback = function()
        loadstring(game:HttpGet("https://cdn.wearedevs.net/scripts/BTools.txt"))()
    end
})

-- Jerk Off Tool R6
Window:CreateButton({
    Name = "Jerk Off Tool (R6)",
    Callback = function()
        loadstring(game:HttpGet("https://pastefy.app/wa3v2Vgm/raw"))()
    end
})

